name = input("what is your name? ")
num1 = float(input("enter first number "))
num2 = float(input("enter second number "))
operation = input(" what operation would you like to preferm? (+, -, *, /): ")
if operation == "+":
   result = num1 + num2
elif operation == "-":
   result = num1 - num2
elif operation == "*":
   result = num1 * num2
elif operation == "/"
     if num2 != 0:
        result = num1 / num2
     else:
         result = "error: cannot divide by zero! "
else:
    result = "invalid opperation!"
print(name + ", your result is: " + str(result))
